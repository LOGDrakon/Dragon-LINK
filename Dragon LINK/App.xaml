            <SolidColorBrush x:Key="PrimaryText" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="SecondaryText" Color="#B0C4D4"/>
            <SolidColorBrush x:Key="AccentRed" Color="#E63A1D"/>
            <SolidColorBrush x:Key="AccentOrange" Color="#F86521"/>
            <SolidColorBrush x:Key="AccentYellow" Color="#FE891A"/>
            <SolidColorBrush x:Key="Success" Color="#2ECC71"/>
